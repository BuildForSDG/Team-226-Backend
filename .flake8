[flake8]

# there's nothing interesting in these files
exclude =
  .pytest_cache
  .DS_Store
  __pycache__
  **/**/__pycache__
  *.pyc
  .git
  setup.py
  build
  dist
  releases
  .venv
  .tox
  .vscode
  .github
  tests/fixtures/
  tests/utils/fixtures/
  .env
  venv

# sometimes lines should be too long
# for example with urls, paths etc...
ignore = E501

max-complexity = 10
